<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/header'); %>

        <title>Tickers</title>
</head>

<body>
    <%- include('../partials/navigation', {active:'tickers'}); %>

        <main role="main" class="container">
            <h1>Ticker</h1>
            <form
                action="<% if(locals.entry){ %>/admin/tickers/edit/<%= entry.id %><% }else{ %>/admin/tickers/create<% } %>"
                method="POST">
                <div class="form-group">
                    <label for="inputFormName">Name</label>
                    <input type="text" class="form-control" id="inputFormName" name="name"
                        value="<% if(locals.entry){ %><%= entry.name %><% } %>">
                </div>

                <div class="form-group">
                    <label for="inputFormText">Text</label>
                    <textarea class="form-control" id="inputFormText"
                        name="text"><% if(locals.entry){ %><%= entry.text %><% } %></textarea>
                </div>

                <button type="submit" class="btn btn-primary">
                    <% if(locals.entry){ %>Update<% }else{ %>Create<% } %>
                </button>
            </form>

        </main>

        <%- include('../partials/footer'); %>
</body>

</html>